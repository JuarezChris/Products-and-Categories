@model Association
<div id="wrapper">
    <h1>@ViewBag.Prod.Name</h1>
<div class="box1">
<form asp-action="AddToCategory" asp-controller="Home" method="POST">
   <h3>Add Category:</h3>
   <div class="row">
       <input type="hidden" asp-for="ProductId" value="@ViewBag.Prod.ProductId">
       <select asp-for="CategoryId">
       @if (ViewBag.Cat != null)
       {
           @foreach (var c in @ViewBag.Cat)
           {
               <option value="@c.CategoryId">@c.Name</option>
           }
       }
       </select>
   </div>
   <div class="row">
       <input value="Add" type="submit">
   </div>
</form>
</div>
